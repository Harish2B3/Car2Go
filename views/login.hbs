<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Car2Go</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
      .container-fluid{
        width: 350px;
        height: max-content;
        border-radius: 7px;
        position: relative;
        top: 90px;
        overflow: hidden;
        background-color: #fff;
      }
      button{
        width: 95%;
      }
      body{
        overflow: hidden;
        background-color: #faf7f7;
      }
      p{
        margin: 5px;
        padding: 5px;
      }
      
    </style>
  </head>
  <body>
    <form action="/login" method="post">
    <center>
      <div class="container-fluid shadow-lg m-5 p-3">
        {{#if message}}
        <div class="alert alert-danger" role="alert">
          {{message}}
        </div>
        {{/if}}
        <h2>Login</h2>
        <div class="input-group mb-3 m-1 p-2">
          <input type="text" class="form-control" name="username" id="username" placeholder="Username" aria-label="Username">
        </div>
        <div class="input-group mb-3 m-1 p-2">
          <input type="password" class="form-control" name="password" id="password" placeholder="Password" aria-label="Password">
        </div>
        <input type="submit" class="form-control bg-primary w-100" value="Submit">
        <p>Don't Have Account ? <a href="./signup">Sign Up</a></p>
      </div>
     </center>
    </form>
  </body>
</html>